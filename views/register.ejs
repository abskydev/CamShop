<h1>Register</h1>
<form action="/register" method="POST">
  <div>
    <label for="name">Name</label>
    <input type="text" id="name" name="name" required minlength="2" maxlength="20">
  </div>
  <div>
    <label for="name">Surname</label>
    <input type="text" id="Surname" name="Surname" required minlength="2" maxlength="40">
  </div>
  <div>
    <label for="name">Nick</label>
    <input type="text" id="Nick" name="Nick" required minlength="3" maxlength="15">
  </div>
  <div>
    <label for="email">Email</label>
    <input type="email" id="email" name="email" required minlength="5">
  </div>
  <div>
    <label for="password">Password</label>
    <input type="password" id="password" name="password" required minlength="10">
  </div>
  <div>
    <label for="password">Password reapete</label>
    <input type="password" id="passwordR" name="passwordR" required minlength="10">
  </div>
  <button type="submit">Register</button>
</form>
